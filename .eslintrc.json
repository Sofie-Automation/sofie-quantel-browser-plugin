{
	"extends": ["eslint:recommended", "plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": "error"
	},
	"env": { "es2017": true, "browser": true },
	"parserOptions": { "sourceType": "module" },
	"overrides": [
		{
			"files": ["*-test.js"],
			"env": {
				"mocha": true,
				"node": true
			}
		},
		{
			"files": ["server/*.js"],
			"env": { "node": true, "browser": false }
		}
	]
}
